{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Alarmprotokoll",
      "items": [
        {
          "type": "Image",
          "image": "data:image/png;base64,"
        },
        {
          "type": "Label",
          "caption": "Ein Gemeinschaftsprojekt von Normen Thiel und Ulrich Bittner\n\nMit dieser Instanz können Ereignisse protokolliert und archiviert werden.\nWeitere Informationen entnehmen Sie bitte der Dokumentation.\n"
        },
        {
          "type": "Label",
          "caption": "Instanz ID:"
        },
        {
          "type": "Label",
          "caption": "Modul:"
        },
        {
          "type": "Label",
          "caption": "Version:"
        },
        {
          "type": "Label",
          "caption": "Datum:"
        },
        {
          "type": "Label",
          "caption": "Uhrzeit:"
        },
        {
          "type": "Label",
          "caption": "Entwickler:"
        },
        {
          "type": "Label",
          "caption": "Präfix:"
        },
        {
          "type": "ValidationTextBox",
          "name": "Note",
          "caption": "Notiz",
          "width": "600px"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "CheckBox",
          "name": "MaintenanceMode",
          "caption": "Wartungsmodus"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Bezeichnung",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte geben Sie eine eindeutige Bezeichnung für dieses Alarmprotokoll an (z.B. Standortbezeichnung):"
        },
        {
          "type": "ValidationTextBox",
          "name": "Designation",
          "caption": "Bezeichnung",
          "width": "600px"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Archivierung",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie das Archiv für die Speicherung der Ereignisse aus:"
        },
        {
          "type": "SelectInstance",
          "name": "Archive",
          "caption": "Archiv",
          "width": "600px"
        },
        {
          "type": "CheckBox",
          "name": "UseArchiving",
          "caption": "Archivierung verwenden"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie den maximalen Zeitraum in den Tagen für die Speicherung der Ereignisse an:"
        },
        {
          "type": "NumberSpinner",
          "name": "ArchiveRetentionTime",
          "caption": "Zeitraum",
          "suffix": "Tage"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Meldungen",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte wählen Sie aus, welche Meldungen angezeigt werden sollen:"
        },
        {
          "type": "CheckBox",
          "name": "EnableAlarmMessages",
          "caption": "Alarmmeldungen"
        },
        {
          "type": "CheckBox",
          "name": "EnableStateMessages",
          "caption": "Zustandsmeldungen"
        },
        {
          "type": "CheckBox",
          "name": "EnableEventMessages",
          "caption": "Ereignismeldungen"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie den Zeitraum in Tagen für die anzuzeigenden Alarmmeldungen an:"
        },
        {
          "type": "NumberSpinner",
          "name": "AlarmMessagesRetentionTime",
          "caption": "Alarmmeldungen",
          "suffix": "Tage"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie die Anzahl der anzuzeigenden Zustandsmeldungen an:"
        },
        {
          "type": "NumberSpinner",
          "name": "AmountStateMessages",
          "caption": "Zustandsmeldungen",
          "suffix": "Meldungen"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie den Zeitraum in Tagen für die anzuzeigenden Ereignismeldungen an:"
        },
        {
          "type": "NumberSpinner",
          "name": "EventMessagesRetentionTime",
          "caption": "Ereignismeldungen",
          "suffix": "Tage"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "E-Mail Versand",
      "items": [
        {
          "type": "Label",
          "caption": "Bitte geben Sie den Betreff für das Montasprotokoll an:"
        },
        {
          "type": "ValidationTextBox",
          "name": "MonthlyProtocolSubject",
          "caption": "Betreff Monatsprotokoll"
        },
        {
          "type": "Label",
          "caption": "\nBitte geben Sie den Betreff für das Archivprotokoll an:"
        },
        {
          "type": "ValidationTextBox",
          "name": "ArchiveProtocolSubject",
          "caption": "Betreff Archivprotokoll"
        },
        {
          "type": "Label",
          "caption": "\nBitte fügen Sie die Empfänger hinzu:"
        },
        {
          "type": "List",
          "name": "Recipients",
          "caption": "E-Mail Empfänger",
          "rowCount": 3,
          "add": true,
          "delete": true,
          "sort": {
            "column": "Name",
            "direction": "ascending"
          },
          "columns": [
            {
              "caption": "Aktiviert",
              "name": "Use",
              "width": "100px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            },
            {
              "caption": "Name des Empfängers",
              "name": "Name",
              "width": "350px",
              "add": "",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "E-Mail Adresse",
              "name": "Address",
              "width": "350px",
              "add": "@",
              "edit": {
                "type": "ValidationTextBox"
              }
            },
            {
              "caption": "SMTP",
              "name": "ID",
              "width": "350px",
              "add": 0,
              "edit": {
                "type": "SelectInstance"
              }
            },
            {
              "caption": "Monatsprotokoll",
              "name": "MonthlyProtocol",
              "width": "150px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            },
            {
              "caption": "Archivprotokoll",
              "name": "ArchiveProtocol",
              "width": "150px",
              "add": true,
              "edit": {
                "type": "CheckBox"
              }
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Konfiguration",
      "items": [
        {
          "type": "Button",
          "caption": "Neu einlesen",
          "onClick": "APRO_ReloadConfiguration($id);"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectCategory",
              "name": "BackupCategory",
              "caption": "Kategorie",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "Button",
              "caption": "Sichern",
              "onClick": "APRO_CreateBackup($id, $BackupCategory);"
            }
          ]
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectScript",
              "name": "ConfigurationScript",
              "caption": "Konfigurationsskript",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "PopupButton",
              "caption": "Wiederherstellen",
              "popup": {
                "caption": "Konfiguration wirklich wiederherstellen?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Wiederherstellen",
                    "onClick": "APRO_RestoreConfiguration($id, $ConfigurationScript);"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Archivierung",
      "items": [
        {
          "type": "Button",
          "caption": "Status anzeigen",
          "onClick": "APRO_ShowArchiveState($id);"
        },
        {
          "type": "PopupButton",
          "caption": "Archivdaten aufräumen",
          "popup": {
            "caption": "Archivdaten wirklich aufräumen?",
            "items": [
              {
                "type": "Button",
                "caption": "Archivdaten aufräumen",
                "onClick": "APRO_CleanUpArchiveData($id); echo 'Die archivierten Daten wurden erfolgreich aufgeräumt!';"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Meldungen",
      "items": [
        {
          "type": "PopupButton",
          "caption": "Ereignismeldungen löschen",
          "popup": {
            "caption": "Ereignismeldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Ereignismeldungen löschen",
                "onClick": "APRO_DeleteEventMessages($id);"
              }
            ]
          }
        },
        {
          "type": "PopupButton",
          "caption": "Zustandsmeldungen löschen",
          "popup": {
            "caption": "Zustandsmeldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Zustandsmeldungen löschen",
                "onClick": "APRO_DeleteStateMessages($id);"
              }
            ]
          }
        },
        {
          "type": "PopupButton",
          "caption": "Alarmmeldungen löschen",
          "popup": {
            "caption": "Alarmmeldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Alarmmeldungen löschen",
                "onClick": "APRO_DeleteAlarmMessages($id);"
              }
            ]
          }
        },
        {
          "type": "PopupButton",
          "caption": "Alle Meldungen löschen",
          "popup": {
            "caption": "Alle Meldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Alle Meldungen löschen",
                "onClick": "APRO_DeleteMessages($id);"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Monatsprotokoll",
      "items": [
        {
          "type": "Button",
          "caption": "Vormonat versenden",
          "onClick": "APRO_SendMonthlyProtocol($id, false, 1);"
        },
        {
          "type": "Button",
          "caption": "Aktueller Monat versenden",
          "onClick": "APRO_SendMonthlyProtocol($id, false, 0);"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Archivprotokoll",
      "items": [
        {
          "type": "Button",
          "caption": "Archivprotokoll versenden",
          "onClick": "APRO_SendArchiveProtocol($id);"
        }
      ]
    }
  ],
  "status": [
    {
      "code": 101,
      "icon": "active",
      "caption": "Alarmprotokoll wird erstellt"
    },
    {
      "code": 102,
      "icon": "active",
      "caption": "Alarmprotokoll ist aktiv"
    },
    {
      "code": 103,
      "icon": "active",
      "caption": "Alarmprotokoll wird gelöscht"
    },
    {
      "code": 104,
      "icon": "inactive",
      "caption": "Alarmprotokoll ist inaktiv"
    },
    {
      "code": 200,
      "icon": "inactive",
      "caption": "Es ist Fehler aufgetreten, weitere Informationen unter Meldungen oder im Log"
    }
  ]
}