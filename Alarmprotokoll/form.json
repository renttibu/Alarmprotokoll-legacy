{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Funktionen",
      "items": [
        {
          "type": "CheckBox",
          "name": "MaintenanceMode",
          "caption": "Wartungsmodus"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "CheckBox",
          "name": "EnableAlarmMessages",
          "caption": "Alarmmeldungen"
        },
        {
          "type": "CheckBox",
          "name": "EnableStateMessages",
          "caption": "Zustandsmeldungen"
        },
        {
          "type": "CheckBox",
          "name": "EnableEventMessages",
          "caption": "Ereignismeldungen"
        },
        {
          "type": "Label",
          "caption": " "
        },
        {
          "type": "NumberSpinner",
          "name": "AlarmMessagesRetentionTime",
          "caption": "Alarmmeldungen",
          "suffix": "Tage"
        },
        {
          "type": "NumberSpinner",
          "name": "AmountStateMessages",
          "caption": "Zustandsmeldungen",
          "suffix": "Meldungen"
        },
        {
          "type": "NumberSpinner",
          "name": "EventMessagesRetentionTime",
          "caption": "Ereignismeldungen",
          "suffix": "Tage"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Bezeichnung",
      "items": [
        {
          "type": "ValidationTextBox",
          "name": "Designation",
          "caption": "Bezeichnung (z.B. Standortbezeichnung)",
          "width": "600px"
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Archivierung",
      "items": [
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Protokolle",
      "items": [
      ]
    }
  ],
  "actions": [
    {
      "type": "ExpansionPanel",
      "caption": "Konfiguration",
      "items": [
        {
          "type": "Button",
          "caption": "Neu einlesen",
          "onClick": "AP_ReloadConfiguration($id);"
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectCategory",
              "name": "BackupCategory",
              "caption": "Kategorie",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "Button",
              "caption": "Sichern",
              "onClick": "AP_CreateBackup($id, $BackupCategory);"
            }
          ]
        },
        {
          "type": "RowLayout",
          "items": [
            {
              "type": "SelectScript",
              "name": "ConfigurationScript",
              "caption": "Konfiguration",
              "width": "600px"
            },
            {
              "type": "Label",
              "caption": " "
            },
            {
              "type": "PopupButton",
              "caption": "Wiederherstellen",
              "popup": {
                "caption": "Konfiguration wirklich wiederherstellen?",
                "items": [
                  {
                    "type": "Button",
                    "caption": "Wiederherstellen",
                    "onClick": "AP_RestoreConfiguration($id, $ConfigurationScript);"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Archivierung",
      "items": [
        {
          "type": "Button",
          "caption": "Status anzeigen",
          "onClick": "AP_ShowArchiveState($id);"
        },
        {
          "type": "PopupButton",
          "caption": "Archivdaten aufräumen",
          "popup": {
            "caption": "Archivdaten wirklich aufräumen?",
            "items": [
              {
                "type": "Button",
                "caption": "Archivdaten aufräumen",
                "onClick": "AP_CleanUpArchiveData($id); echo 'Die archivierten Daten wurden erfolgreich aufgeräumt!';"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Meldungen",
      "items": [
        {
          "type": "PopupButton",
          "caption": "Alle Meldungen löschen",
          "popup": {
            "caption": "Alle Meldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Alle Meldungen löschen",
                "onClick": "AP_DeleteMessages($id);"
              }
            ]
          }
        },
        {
          "type": "PopupButton",
          "caption": "Ereignismeldungen löschen",
          "popup": {
            "caption": "Ereignismeldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Ereignismeldungen löschen",
                "onClick": "AP_DeleteEventMessages($id);"
              }
            ]
          }
        },
        {
          "type": "PopupButton",
          "caption": "Zustandsmeldungen löschen",
          "popup": {
            "caption": "Zustandsmeldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Zustandsmeldungen löschen",
                "onClick": "AP_DeleteStateMessages($id);"
              }
            ]
          }
        },
        {
          "type": "PopupButton",
          "caption": "Alarmmeldungen löschen",
          "popup": {
            "caption": "Alarmmeldungen wirklich löschen?",
            "items": [
              {
                "type": "Button",
                "caption": "Alarmmeldungen löschen",
                "onClick": "AP_DeleteAlarmMessages($id);"
              }
            ]
          }
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Protokolle",
      "items": [
        {
          "type": "Button",
          "caption": "Vormonat versenden",
          "onClick": "AP_SendMonthlyProtocol($id, false, 1);"
        },
        {
          "type": "Button",
          "caption": "Aktueller Monat versenden",
          "onClick": "AP_SendMonthlyProtocol($id, false, 0);"
        },
        {
          "type": "Button",
          "caption": "Archivprotokoll versenden",
          "onClick": "AP_SendArchiveProtocol($id);"
        }
      ]
    }
  ]
}